{
  "name": "kurkuma-api",
  "version": "1.0.0",
  "description": "APIs for Kurkuma",
  "main": "index.js",
  "scripts": {
    "build:shared": "yarn clean:build && lerna run build --scope shared",
    "start:shared": "lerna run start:dev --scope shared",
    "build": "yarn build:shared && lerna run build --scope",
    "clean": "lerna clean -y",
    "clean:build": "rm -rf ./packages/**/*.tsbuildinfo ./packages/**/dist/",
    "pre-commit": "yarn build:shared && lerna run --concurrency 1 --stream pre-commit --since HEAD --exclude-dependents",
    "pre-push": "yarn build:shared && lerna run --concurrency 1 --stream pre-push",
    "prepare": "husky install",
    "start": "yarn build:shared && concurrently \"yarn start:shared\" \"lerna run start --scope",
    "start:dev": "yarn build:shared && concurrently \"yarn start:shared\" \"lerna run start:dev --scope",
    "start:prod": "yarn build:shared && lerna run start:prod --scope",
    "test": "yarn build:shared && lerna run test --scope",
    "test:quick": "yarn build:shared && lerna run test:quick --scope",
    "test:watch": "yarn build:shared && concurrently \"yarn start:shared\" \"lerna run test:watch --scope"
  },
  "author": "M20A23X",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/M20A23X/kurkuma-api.git"
  },
  "bugs": {
    "url": "https://github.com/M20A23X/kurkuma-api/issues"
  },
  "devDependencies": {
    "@babel/plugin-transform-private-property-in-object": "^7.23.4",
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/bootstrap": "^5.2.10",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lerna": "^8.0.2",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.1",
    "prettier-stylelint": "^0.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsc-watch": "^6.0.4",
    "tsconfig": "^7.0.0",
    "typescript": "^5.3.3",
    "yarn": "1.22.21"
  }
}
